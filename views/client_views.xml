<odoo>
  <record id="view_internet_client_tree" model="ir.ui.view">
    <field name="name">internet.client.tree</field>
    <field name="model">internet.client</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="ci"/>
        <field name="plan_id"/>
        <field name="status"/>
        <field name="deuda_meses"/>
      </tree>
    </field>
  </record>

  <record id="view_internet_client_form" model="ir.ui.view">
    <field name="name">internet.client.form</field>
    <field name="model">internet.client</field>
    <field name="arch" type="xml">
      <form string="Cliente de Internet">
        <sheet>
          <group>
            <field name="name"/>
            <field name="ci"/>
            <field name="address"/>
            <field name="phone"/>
            <field name="email"/>
            <field name="plan_id"/>
            <field name="active"/>
            <field name="status"/>
            <field name="deuda_meses" readonly="1"/>
          </group>
          <notebook>
            <page string="Facturas">
              <field name="invoice_ids">
                <tree editable="bottom">
                  <field name="name"/>
                  <field name="date_invoice"/>
                  <field name="due_date"/>
                  <field name="amount"/>
                  <field name="state"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_internet_clients" model="ir.actions.act_window">
    <field name="name">Clientes</field>
    <field name="res_model">internet.client</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_internet_clients" name="Clientes" parent="menu_internet_root" action="action_internet_clients"/>
</odoo>
