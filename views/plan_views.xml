<odoo>
  <record id="view_internet_plan_tree" model="ir.ui.view">
    <field name="name">internet.plan.tree</field>
    <field name="model">internet.plan</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="speed"/>
        <field name="price"/>
      </tree>
    </field>
  </record>

  <record id="view_internet_plan_form" model="ir.ui.view">
    <field name="name">internet.plan.form</field>
    <field name="model">internet.plan</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="speed"/>
            <field name="price"/>
            <field name="description"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_internet_plans" model="ir.actions.act_window">
    <field name="name">Planes</field>
    <field name="res_model">internet.plan</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_internet_root" name="Clientes de Internet"/>
  <menuitem id="menu_internet_plans" name="Planes" parent="menu_internet_root" action="action_internet_plans"/>
</odoo>
