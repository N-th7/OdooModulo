<odoo>
  <record id="view_internet_invoice_tree" model="ir.ui.view">
    <field name="name">internet.invoice.tree</field>
    <field name="model">internet.invoice</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="client_id"/>
        <field name="date_invoice"/>
        <field name="due_date"/>
        <field name="amount"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_internet_invoice_form" model="ir.ui.view">
    <field name="name">internet.invoice.form</field>
    <field name="model">internet.invoice</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="client_id"/>
            <field name="date_invoice"/>
            <field name="due_date"/>
            <field name="amount"/>
            <field name="state"/>
          </group>
          <footer>
            <button name="action_register_payment" type="object" string="Marcar como pagada" class="btn-primary"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_internet_invoices" model="ir.actions.act_window">
    <field name="name">Facturas</field>
    <field name="res_model">internet.invoice</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_internet_invoices" name="Facturas" parent="menu_internet_root" action="action_internet_invoices"/>
</odoo>
