<odoo>
  <!-- Cron: generar facturas mensuales -->
  <record id="cron_generate_monthly_invoices" model="ir.cron">
    <field name="name">Generar facturas mensuales</field>
    <field name="model_id" ref="model_internet_client"/>
    <field name="state">code</field>
    <field name="code">model = env['internet.invoice']; model._cron_generate_invoices()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">months</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
  </record>

  <!-- Cron: verificar corte de servicio -->
  <record id="cron_check_clients_for_cut" model="ir.cron">
    <field name="name">Verificar clientes para corte</field>
    <field name="model_id" ref="model_internet_client"/>
    <field name="state">code</field>
    <field name="code">env['internet.client']._cron_check_clients_for_cut()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
  </record>
</odoo>
